/* pages/commodity/commodity.wxss */
page{
  width:100%;
  /* overflow:hidden; */
  background: #f4f3f4;
}
.add_top{
  background-color: #fff;
  border-bottom: 1px solid #efeeef;
  padding:0 24rpx 10rpx;
  overflow:hidden;
}
.add_top .title{
  font-size:28rpx;
  color:#6d6d6d;
  height:90rpx;
  line-height:90rpx;
}
.upolad,
.print{
  float:left;
  width:160rpx;
  height:160rpx;
  border:1px solid #efeeef;
  position:relative;
  margin:0 10rpx 20rpx 0;
}
.upolad .add{
  position:absolute;
  width:20rpx;
  height:20rpx;
  top:50%;
  left:50%;
  margin:-10rpx 0 0 -10rpx;
}
.print .del{
  position:absolute;
  width:38rpx;
  height:38rpx;
  top:-19rpx;
  right:-19rpx;
}
.print .demo{
  width:100%;
  height:100%;
  display:block;
}
.import{
  background:#fff;
  padding:0 24rpx;
}
.import input{
  height:94rpx;
  line-height:94rpx;
  color:#6d6d6d;
  font-size:28rpx;
}

.m_xprice{
  margin:14rpx 0;
  overflow:hidden;
}
.m_xprice .project{
  float:left;
  background:#fff;
  width:89%;
  overflow:hidden;
}
.m_xprice .abs{
  float:left;
  width:50%;
}
.m_xprice .abs:nth-child(1) .nums{
  border-right:1px solid #efeeef;
}
.m_xprice .nums{
  margin-left:48rpx;
  line-height:94rpx;
  height:94rpx;
  font-size:28rpx;
}
.m_xprice .nums text{
  display:inline-block;
  color:#fc6466;
  padding-left:15rpx;
}
.m_xprice .top{
  width:100%;
  border-top:1px solid #efeeef;
}
.m_xprice .operate{
  float:left;
  width:11%;
  text-align:center;
}
.m_xprice .operate .sele{
  display:inline-block;
  width:38rpx;
  margin:80rpx 0;
}
.m_xprice .operate .bus .sele{
  margin:20rpx 0 0;
}

/* m_xtabs */
.m_xtabs{background:#fff;}
.m_xtabs .our{border-top:1px solid #f4f3f4;height:96rpx;line-height:104rpx;overflow:hidden;padding:0 32rpx 0 24rpx;color:#6d6d6d;font-size:28rpx;}
.m_xtabs .our image{float:right;width:14rpx;height:24rpx;margin-top:40rpx;}
.m_xtabs .our text{float:right;margin-right:14rpx;}
.m_xtabs .edit{background:#fff;padding:24rpx;}
.m_xtabs .edit textarea{display:block;width:100%;line-height:34rpx;font-size:28rpx;}

.m_xbtns{
  padding:30rpx 5%;
}
.m_xcome{
  display:block;
  width:100%;
  background:#fc6466;
  text-align:center;
  font-size:32rpx;
  color:#fff;
  border:none;
  border-radius:0;
  height:90rpx;
  line-height:90rpx;
}