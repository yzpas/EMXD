page{background:#f4f4f4;}
.m_xwraps{margin-bottom:100rpx;}

/* m_xdiagram */
.m_xdiagram,
.m_xdiagram swiper-item{height:715rpx;}
.m_xdiagram .slide-image{width:100%;height:715rpx;display:block;}

/* m_xwhite */
.m_xwhite,
.m_xwhite swiper-item{width:65%;margin:0 auto;height:442rpx;}
.m_xwhite .slide-image{display:block;width:100%;height:100%;}

/* m_xprice */
.m_xprice{font-size:30rpx;background:#fc6466;height:94rpx;line-height:94rpx;padding:0 2.7%;color:#fff;}
.m_xprice text{font-size:60rpx;}

/* m_xstate */
.m_xstate{font-size:28rpx;color:#5e5e5e;line-height:40rpx;padding:10rpx 2.5%;background:#fff;margin:6rpx 0 14rpx;}

/* m_xdetail */
.m_xdetail{background:#fff;padding:0 20rpx;}
.m_xdetail .title{font-size:24rpx;color:#5e5e5e;padding:14rpx 0;line-height:40rpx;}
.m_xdetail .truth{font-size:30rpx;color:#5e5e5e;line-height:46rpx;padding-bottom:10rpx;min-height:220rpx;position:relative;}
.m_xdetail .truth text{display:block;}
.m_xdetail .truth image{position:absolute;width:72rpx;right:0;top:60rpx;}

/* m_xsettle */
.m_xsettle{position:fixed;width:100%;left:0%;bottom:0;border:1px solid #efeeef;background:#fff;border-bottom:0;}
.m_xsettle .hide{display:none;}
.m_xsettle .show{display:block;}
.m_xsettle .all{overflow:hidden;padding:10rpx 14rpx;border-bottom:1px solid #efeeef;}
.m_xsettle .dels{float:right;font-size:20rpx;color:#585858;line-height:40rpx;}
.m_xsettle .dels image{display:inline-block;width:30rpx;vertical-align:middle;margin:-3rpx 7rpx 0 0;}
.m_xsettle .sele{display:inline-block;font-size:20rpx;color:#585858;line-height:40rpx;}
.m_xsettle .sele image{display:inline-block;width:30rpx;vertical-align:middle;margin:-3rpx 10rpx 0 0;}
.m_xsettle .shop{border-bottom:1px solid #efeeef;overflow:hidden;padding:22rpx 14rpx 30rpx;}
.m_xsettle .nums{float:right;line-height:40rpx;margin-top:14rpx;}
.m_xsettle .nums image{display:inline-block;width:40rpx;vertical-align:middle;margin-top:-3px;cursor:pointer;}
.m_xsettle .nums text{display:inline-block;font-size:24rpx;color:#000;padding:0 5rpx;width:50rpx;text-align:center;}
.m_xsettle .cont{float:left;overflow:hidden;}
.m_xsettle .cont image{float:left;}
.m_xsettle .cont image.sele{width:30rpx;margin:16rpx 35rpx 0 0;}
.m_xsettle .cont image.demo{width:94rpx;height:48rpx;margin-top:10rpx;}
.m_xsettle .cont .pay{margin-left:180rpx;}
.m_xsettle .cont text{display:block;font-size:16rpx;color:#585858;line-height:26rpx;}
.m_xsettle .cont text.red{color:#fc6466;font-size:22rpx;padding-top:6rpx;}
.m_xsettle .settle{overflow:hidden;}
.m_xsettle .settle button{float:right;width:23%;height:92rpx;line-height:92rpx;text-align:center;background:#fc6466;color:#fff;font-size:28rpx;border:none;border-radius:0;margin-left:2rpx;}
.m_xsettle .settle button.add{background:#ff9596;width:24%;}
.m_xsettle .car{position:relative;width:76rpx;height:76rpx;margin:12rpx 16rpx 0;float:left;}
.m_xsettle .car image{display:block;width:100%;cursor:pointer;}
.m_xsettle .car text{position:absolute;width:32rpx;line-height:32rpx;height:32rpx;text-align:center;overflow:hidden;background:#ff9596;border-radius:50%;font-size:20rpx;color:#fff;top:-6rpx;right:-10rpx;}
.m_xsettle .pice{float:left;font-size:32rpx;color:#fc6466;padding:46rpx 0 0 30rpx;}

/* m_xpopups */
.m_xpopups{position:fixed;top:0;left:0;z-index:6;background:rgba(0,0,0,.65);width:100%;height:100%;}

/* m_xspecs */
.m_xspecs{position:fixed;left:0;bottom:0;right:0;background:#fff;border-radius:14rpx 14rpx 0 0;padding:30rpx 2.3% 12rpx; z-index: 100;}
.m_xspecs .pays{text-align:center;font-size:26rpx;color:#fc6466;line-height:40rpx;padding:20rpx 0;}
.m_xspecs .nums{line-height:38rpx;margin:0 auto;width:140rpx;overflow:hidden;margin-bottom:22rpx;}
.m_xspecs .nums image{float:left;width:38rpx;vertical-align:middle;cursor:pointer;}
.m_xspecs .nums text{float:left;font-size:24rpx;color:#000;padding:0 5rpx;width:50rpx;text-align:center;}
.m_xspecs .btns{display:block;width:95%;background:#fc6466;text-align:center;height:90rpx;line-height:90rpx;border:none;border-radius:0;font-size:28rpx;color:#fff;margin:22rpx auto 0;}
.m_xspecs .colse{position:absolute;width:46rpx;top:32rpx;right:28rpx;}

/* m_xsize */
.m_xsize{border-top:1px solid #f0eff0;}
.m_xsize.soil{border-bottom:1px solid #f0eff0;}
.m_xsize text{font-size:26rpx;color:#262626;line-height:40px;display:block;margin-bottom:6rpx;}
.m_xsize .sort{overflow:hidden;}
.m_xsize .our{float:left;background:#f5f4f5;width:116rpx;text-align:center;height:48rpx;line-height:48rpx;color:#262626;font-size:20rpx;margin:0 24rpx 24rpx 0;border-radius:24rpx;}
.m_xsize .current{background:#fc6466;color:#fff;}