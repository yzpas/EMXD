.container{
    display: flex;
    flex-direction:column;
    align-items: center;
    background-color:#b3d4db;
}

.avatar{
    width:200rpx;
    height:200rpx;
    border-radius: 50%;
    object-fit: cover;
    display: block;
    margin-top:160rpx;
    overflow: hidden;
}

.motto{
    margin-top:100rpx;
    font-size:32rpx;
    font-weight: bold;
}

