page{background:#f4f3f4;}

.manage_tab{
  width: 100%;
  height: 62rpx;
  background-color: #ffffff;
  margin-top:15rpx;
}
.manage_tab .tabli{
  width: 25%;
  float: left;
  text-align: center;
  font-size: 20rpx;
  color: #6d6d6d;
  line-height: 57rpx;
}
.manage_tab .select{
  color: #fd6466;
  border-bottom: 5rpx solid #fd6466;
}

/* m_xreceive */
.m_xreceive{
  background:#fff;
}
.m_xreceive.z_show{
  display:block;
}
.m_xreceive.z_hide{
  display:none;
}
.m_xreceive .title{
  overflow:hidden;
  line-height:54rpx;
  height:54rpx;
  font-size:24rpx;
  color:#6d6d6d;
  background:#f4f3f4;
  padding:0 24rpx
}
.m_xreceive .details{
  background:#fff;
  padding:20rpx 24rpx;
  overflow:hidden;
}
.m_xreceive .details .pays{
  float:right;
  color:#fc6466;
  font-size:36rpx;
  line-height:60rpx;
}
.m_xreceive .mains text{
  display:block;
  color:#6d6d6d;
  font-size:23rpx;
  line-height:33rpx;
}