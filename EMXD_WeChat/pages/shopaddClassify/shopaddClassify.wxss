page{background:#f4f3f4;}

/* m_xpres */
.m_xpres{
  margin-bottom:130rpx;
}
.m_xpres .shop{
  background:#fff;
  height:96rpx;
  line-height:96rpx;
  color:#6d6d6d;
  font-size:24rpx;
  padding-left:28rpx;
  margin-bottom:2rpx;
  overflow:hidden;
}
.m_xpres .shop image{
  float:right;
  width:32rpx;
  margin:35rpx 30rpx 0;
} 

/* m_xcome */
.m_xcome{
  position:fixed;
  width:90%;
  left:5%;
  bottom:30rpx;
  background:#fc6466;
  text-align:center;
  font-size:28rpx;
  color:#fff;
  border:none;
  border-radius:0;
  height:90rpx;
  line-height:90rpx;
}

/* m_xpopup */
.m_xpopup{
  position:fixed;
  top:0;
  width:100%;
  left:0;
  bottom:0;
  z-index:5;
  background:rgba(0, 0, 0, .5);
  display:none;
}
.m_xpopup.on{
  display:block;
}
.m_xconfirm{
  width:72%; 
  background:#FAFAFA;
  font-size:15px;
  position:absolute;
  left:14%;
  top:30%;
  border-radius:30rpx;
  background:#f9f9f9;
  border:1px solid #e0e0e0;
  overflow:hidden;
}
.m_xconfirm .title{
  text-align:center;
  font-size:32rpx; 
  color:#222; 
  line-height:110rpx;
  height:110rpx;
}
.m_xconfirm .import{
  width:86%;
  margin:0 auto 40rpx;
}
.m_xconfirm .import input{
  display:block;
  width:100%;
  height:78rpx;
  line-height:78rpx;
  border:1px solid #e0e0e0;
  background:#fff;
  font-size:32rpx;
  color:#6d6d6d;
  padding-left:26rpx;
  box-sizing:border-box;
}

.m_xconfirm .btns{
  overflow:hidden;
  border-top:1px solid #e0e0e0;
}
.m_xconfirm .cancel,
.m_xconfirm .ensure{
  float:left;
  width:50%;
  font-size:32rpx;
  color:#fc6466;
  text-align:center;
  height:98rpx;
  line-height:98rpx;
}
.m_xconfirm .cancel{
  width:48%;
  border-right:1px solid #e0e0e0;
  color:#6d6d6d;
}