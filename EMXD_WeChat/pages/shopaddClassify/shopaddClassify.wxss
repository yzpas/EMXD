page{background:#f4f3f4;}

/* m_xpres */
.m_xpres{
  /* margin-bottom:160rpx; */
}
.addbox{
  width: 100%;
  height: 160rpx;
  background-color: #f4f3f4;
  /* position: fixed;
  bottom: 0; */
}
.m_xpres .shop{
  background:#fff;
  height:96rpx;
  line-height:96rpx;
  color:#6d6d6d;
  font-size:28rpx;
  padding-left:28rpx;
  margin-bottom:2rpx;
  overflow:hidden;
}
.m_xpres .shop image{
  float:right;
  width:32rpx;
  margin:35rpx 30rpx 0;
} 

/* m_xcome */
.m_xcome{
  position:fixed;
  width:90%;
  left:5%;
  bottom:30rpx;
  background:#fc6466;
  text-align:center;
  font-size:28rpx;
  color:#fff;
  border:none;
  border-radius:0;
  height:90rpx;
  line-height:90rpx;
}

/* m_xpopup */
.m_xpopup{
  position:fixed;
  top:0;
  width:100%;
  left:0;
  bottom:0;
  z-index:5;
  background:rgba(0, 0, 0, .5);
  /* display:none; */
}

.m_xconfirm{
  width:72%; 
  background:#FAFAFA;
  font-size:15px;
  position:absolute;
  left:14%;
  top:30%;
  border-radius:30rpx;
  background:#f9f9f9;
  border:1px solid #e0e0e0;
  overflow:hidden;
  /* display: none; */
  z-index: 100;
}
.m_xconfirm .title{
  text-align:center;
  font-size:32rpx; 
  color:#222; 
  line-height:110rpx;
  height:110rpx;
}
.m_xconfirm .importTo{
  width:86%;
  
}
.m_xconfirm  input{
  display:block;
  width:86%;
  height:78rpx;
  line-height:78rpx;
  margin:0 auto 40rpx;
  border:1px solid #e0e0e0;
  background:#fff;
  font-size:32rpx;
  color:#6d6d6d;
  padding-left:26rpx;
  box-sizing:border-box;
}

.m_xconfirm .btns{
  overflow:hidden;
  border-top:1px solid #e0e0e0;
}
.m_xconfirm .cancel,
.m_xconfirm .ensure{
  float:left;
  width:50%;
  font-size:32rpx;
  color:#fc6466;
  text-align:center;
  height:98rpx;
  line-height:98rpx;
}
.m_xconfirm .cancel{
  width:48%;
  border-right:1px solid #e0e0e0;
  color:#6d6d6d;
}
.on{
  display:block;
}